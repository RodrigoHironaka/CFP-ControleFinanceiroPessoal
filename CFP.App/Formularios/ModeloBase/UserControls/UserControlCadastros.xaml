<UserControl x:Class="CFP.App.Formularios.ModeloBase.UserControls.UserControlCadastros"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CFP.App.Formularios.ModeloBase.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="160 80 160 80">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>

        </Grid.RowDefinitions>
        <Button x:Name="btPessoa" 
                Margin="5,10,5,9.8" Grid.Column="0" Background="#FF1B3861" VerticalAlignment="Stretch" 
                FontSize="16" Content="Pessoas" Foreground="#FFFCF9F9" Height="Auto" />
        <Button x:Name="btTipoRenda" 
                Margin="5,10,5,9.8" Grid.Column="1" Background="#FF1B3861" VerticalAlignment="Stretch" 
                FontSize="16" Content="Tipos de Renda" Foreground="#FFFCF9F9" Height="Auto"/>
        <Button x:Name="btTipoGasto"
                Margin="5,10.2,5,9.6" Grid.Column="0" Grid.Row="1" Background="#FF1B3861" VerticalAlignment="Stretch" 
                FontSize="16" Content="Tipos de Gasto" Foreground="#FFFCF9F9" Height="Auto" />
        <Button x:Name="btFormaPagamento"
                Margin="5,10.2,5,9.6" Grid.Column="1" Grid.Row="1" Background="#FF1B3861" VerticalAlignment="Stretch" 
                FontSize="16" Content="Formas de Pagamento" Foreground="#FFFCF9F9" Click="btFormaPagamento_Click" Height="Auto" />
        <Button x:Name="btUsuario"
                Margin="5,10,5,9.8" Grid.Column="2" Grid.Row="0" Background="#FF1B3861" VerticalAlignment="Stretch" 
                FontSize="16" Content="Usuários" Foreground="#FFFCF9F9" Height="Auto" />

    </Grid>
</UserControl>
