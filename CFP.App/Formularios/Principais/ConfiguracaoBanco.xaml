<Window x:Class="CFP.App.Formularios.Principais.ConfiguracaoBanco"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CFP.App.Formularios.Principais"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="ConfiguracaoBanco"
        ResizeMode="NoResize"
        Height="450" 
        Width="400" 
        WindowStartupLocation="CenterScreen" 
        WindowStyle="None">
    <Grid>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="280"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Background="#FF1F3D68">
                <TextBlock x:Name="lbl" 
                                   Grid.Row="5"
                                   Text="CONFIGURAÇÃO BANCO DE DADOS" 
                                   VerticalAlignment="Top" 
                                   HorizontalAlignment="Center"
                                   FontSize="18"
                                   Foreground="White"
                                   Margin="10"/>
            </Grid>
            <Grid Grid.Row="1" Background="LightSlateGray"/>
        </Grid>
        <Border Margin="35,50,35,42"  
                    Background="LightGray" 
                    Opacity="0.9"
                    CornerRadius="30"
                    BorderBrush="#FF1F3D68">

            <Grid x:Name="GridControls">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                </Grid.ColumnDefinitions>
                <Grid  Grid.Row="0" Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <RadioButton x:Name="rgServidor"
                                 Grid.Column="0"
                                Content="Servidor"
                                FontFamily="Champagne &amp; Limousines" 
                                FontSize="18"  
                                Foreground="#FF1F3D68"
                                Style="{StaticResource MaterialDesignChoiceChipOutlineRadioButton}"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Bottom"/>

                    <RadioButton x:Name="rgTerminal"
                                 Grid.Column="1"
                                Content="Terminal"
                                FontFamily="Champagne &amp; Limousines" 
                                FontSize="18"  
                                Foreground="#FF1F3D68"
                                Style="{StaticResource MaterialDesignChoiceChipOutlineRadioButton}"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Bottom"/>


                </Grid>

                <TextBox x:Name="txtServidor"
                                     Grid.Row="1" Grid.Column="1"
                                     materialDesign:HintAssist.Hint="Servidor"
                                     Style="{StaticResource MaterialDesignFloatingHintTextBox}" 
                                     FontFamily="Champagne &amp; Limousines" 
                                     FontSize="18"  
                                     Foreground="#FF1F3D68"  
                                     VerticalAlignment="Stretch"
                                     Margin="0"/>

                <TextBox x:Name="txtBase"
                                     Grid.Row="2" Grid.Column="1"
                                     materialDesign:HintAssist.Hint="Nome Base"
                                     Style="{StaticResource MaterialDesignFloatingHintTextBox}" 
                                     FontFamily="Champagne &amp; Limousines" 
                                     FontSize="18" 
                                     Foreground="#FF1F3D68"  
                                     VerticalAlignment="Stretch"
                                     Margin="0"/>

                <PasswordBox x:Name="txtUsuario"
                                     Grid.Row="3" Grid.Column="1"
                                     materialDesign:HintAssist.Hint="Usuário"
                                     Style="{StaticResource MaterialDesignFloatingHintPasswordBox}" 
                                     FontFamily="Champagne &amp; Limousines" 
                                     FontSize="18"  
                                     Foreground="#FF1F3D68"  
                                     VerticalAlignment="Stretch"
                                     Margin="0"/>

                <PasswordBox x:Name="txtSenha"
                                     Grid.Row="4" Grid.Column="1"
                                     materialDesign:HintAssist.Hint="Senha"
                                     Style="{StaticResource MaterialDesignFloatingHintPasswordBox}" 
                                     FontFamily="Champagne &amp; Limousines" 
                                     FontSize="18" 
                                     Foreground="#FF1F3D68"  
                                     VerticalAlignment="Stretch"
                                     Margin="0"/>

                <TextBox x:Name="txtPorta"
                                     Grid.Row="5" Grid.Column="1"
                                     materialDesign:HintAssist.Hint="Porta"
                                     Style="{StaticResource MaterialDesignFloatingHintTextBox}" 
                                     FontFamily="Champagne &amp; Limousines" 
                                     FontSize="18"  
                                     Foreground="#FF1F3D68"  
                                     VerticalAlignment="Stretch"
                                     Margin="0"/>

                <Grid Grid.Row="6" Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Button x:Name="btTestarConexao"
                                    Grid.Column="0"
                                    Width="40" 
                                    Height="40"
                                    Style="{StaticResource MaterialDesignFloatingActionAccentButton}"
                                    Background="#FF1F3D68"
                                    BorderBrush="#FF1F3D68"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Left" Click="btTestarConexao_Click" >
                        <materialDesign:PackIcon 
                                        Kind="Connection"  
                                        Width="30" 
                                        Height="30"/>
                    </Button>

                    <TextBlock x:Name="lblStatusConexao" 
                                   Grid.ColumnSpan="6"
                                   Text="Conexão Pendente" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center" 
                                   FontSize="20"
                                   Foreground="#FF1F3D68"/>

                    <Button x:Name="btSair"
                                    Grid.Column="5"
                                    Width="40" 
                                    Height="40"
                                    Style="{StaticResource MaterialDesignFloatingActionAccentButton}"
                                    Background="#FF1F3D68"
                                    BorderBrush="#FF1F3D68"
                                    VerticalAlignment="Bottom"
                                    HorizontalAlignment="Right" Margin="0,0,0,2" Click="btSair_Click" >
                        <materialDesign:PackIcon 
                                        Kind="Remove"  
                                        Width="30" 
                                        Height="30"/>
                    </Button>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
